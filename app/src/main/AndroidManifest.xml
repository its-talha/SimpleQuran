<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mindorks.example.SimpleQuran">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="SimpleQuran"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.mindorks.example.SimpleQuran.LanguageActivity"
            android:exported="false" />
        <activity
            android:name="com.mindorks.example.SimpleQuran.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.mindorks.example.SimpleQuran.WebViewActivity" />
        <activity android:name="com.mindorks.example.SimpleQuran.PdfViewActivity" />
        <activity android:name="com.mindorks.example.SimpleQuran.MainActivity" />
    </application>

</manifest>